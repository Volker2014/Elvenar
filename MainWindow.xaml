<Window x:Class="Elvenar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Elvenar"
        Title="Elvenar Makros" Height="350" Width="855" MinWidth="150">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="150" Width="3*"/>
            <ColumnDefinition MinWidth="150" Width="3*"/>
            <ColumnDefinition Width="35"/>
            <ColumnDefinition MinWidth="250" Width="5*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0" MinWidth="50">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Height="30">
                <Button x:Name="btnMakro" Click="RunMacro" Content="Ausführen" Margin="10,10,20,0" />
                <CheckBox Content="Vordergrund" IsChecked="{Binding Topmost}" Margin="30,10,0,0" HorizontalAlignment="Right"/>
            </StackPanel>
            <DataGrid DockPanel.Dock="Bottom" x:Name="dataGridMacros" ItemsSource="{Binding Macros}" MouseUp="dataGridMacros_MouseUp"
            Margin="10" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <DockPanel Grid.Column="1">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                <Button x:Name="load" Click="Load" Content="Laden" Margin="10,10,0,0" />
                <Button x:Name="save" Click="Save" Content="Speichern" Margin="10,10,0,0" />
                <Button x:Name="help" Click="ShowHelp" Content="Hilfe" Margin="10,10,0,0" />
            </StackPanel>
            <DataGrid DockPanel.Dock="Bottom" x:Name="dataGridSteps" ItemsSource="{Binding Steps}"
                 Margin="10" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Warte" Binding="{Binding Delay}"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <StackPanel Grid.Column="2" VerticalAlignment="Center">
            <Button x:Name="addSymbol" Click="AddSymbol" Margin="5" >
                <Path Fill="Black" Data="M 20 0 L 20 20 L 0 10 Z"/>
            </Button>
            <Button x:Name="removeSymbol" Click="RemoveSymbol" Margin="5" >
                <Path Fill="Black" Data="M 0 0 L 0 20 L 20 10 Z"/>
            </Button>
            <Button x:Name="upSymbol" Click="MoveSymbolUp" Margin="5" >
                <Path Fill="Black" Data="M 0 20 L 10 0 L 20 20 Z"/>
            </Button>
            <Button x:Name="downSymbol" Click="MoveSymbolDown" Margin="5">
                <Path Fill="Black" Data="M 0 0 L 20 0 L 10 20 Z"/>
            </Button>
        </StackPanel>
        
        <DockPanel Grid.Column="3">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Height="30">
                <Button x:Name="btnSymbolSelect" Click="SelectSymbol" Content="Bestimme" Margin="10,10,10,0" />
                <Button x:Name="btnSymbolShow" Click="ShowSymbol" Content="Gehe zu" Margin="10,10,0,0" />
                <Label x:Name="labelXY" Content="X: ?, Y: ?" Margin="10,5,0,0" />
            </StackPanel>
            <DataGrid DockPanel.Dock="Bottom" x:Name="dataGridSymbols" ItemsSource="{Binding Path=Symbols}"
                  Margin="10" AutoGenerateColumns="False" CellEditEnding="dataGridSymbols_CellEditEnding">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Symbol" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Positon" Binding="{Binding Position}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Warte" Binding="{Binding Delay}"/>
                </DataGrid.Columns>            </DataGrid>
        </DockPanel>
    </Grid>
</Window>
